<h1>Contact Us</h1>
<div class="contact">
  <%= form_tag contact_forms_path, method: :post do %>
    <div class="field">
      <%= label_tag :first_name %></br>
      <%= text_field_tag :first_name, nil, class: 'form-control', required: true %>
    </div>
    <div class="field">
      <%= label_tag :last_name %></br>
      <%= text_field_tag :last_name, nil, class: 'form-control', required: true %>
    </div>
    <div class="field">
      <%= label_tag :phone %></br>
      <%= telephone_field_tag :phone, nil, class: 'form-control', required: false %>
    </div>
    <div class="field">
      <%= label_tag :email %></br>
      <%= email_field_tag :email, nil, class: 'form-control', required: true %>
    </div>

    <div class="field">
      <%= label_tag :message %></br>
      <%= text_area_tag :message, nil, class: 'form-control', required: true %>
    </div>

    <%= submit_tag 'Send!', class: 'actions' %>
  <% end %>
</div>
