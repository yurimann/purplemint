<!DOCTYPE html>
<html>
  <head>
    <title>Purple Mint Catering</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="flashes">
      <% if flash[:notice] %>
        <p id="notice"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id="alert"><%= flash[:alert] %></p>
      <% end %>
    </div>
    <div class="top-image">
      <a href="/"><img class="banner" src="http://i.imgur.com/JqWLElo.png" /></a>
    </div>
    <nav>
      <ul class="navigation">
        <%= icon('navicon', class: 'sprocket' ) %>
        <li class="choices"><%= link_to 'ABOUT', about_path %></li>
        <li class="choices"><%= link_to 'MENU', menus_path %></li>
        <li class="choices"><%= link_to 'EVENTS', events_path %></li>
        <li class="choices"><%= link_to 'CONTACT US', new_contact_form_path %></li>
      </ul>
    </nav>
    <% if current_user %>
      <ul class="navigation">
        <%= icon('navicon', class: 'sprocket' ) %>
        <li class="choices"><%= link_to 'NEW IMAGE', new_image_path %></li>
        <li class="choices"><%= link_to 'NEW MENU', new_menu_path %></li>
        <li class="choices"><%= link_to 'NEW EVENT', new_event_path %></li>
      </ul>
        <p>Logged in as <%= current_user.first_name %></p>
        <%= link_to 'Log Out', session_path(current_user.id), method: :delete %></br>
    </nav>
      <% end %>
    <%# else %>
      <%# link_to 'Log In', new_session_path %>
        <%# link_to 'Forgot password?', new_password_reset_path %>
    <%# end %>
    <%= yield %>
  </body>
  <%# console %>
</html>
